<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/userHeader"
        layout="@layout/header_user"
        android:layout_marginBottom="36dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <include
        android:id="@+id/itemChangePassword"
        layout="@layout/item_change_password"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <include
        android:id="@+id/itemChangePassword"
        layout="@layout/item_about"
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_marginBottom="36dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        style="@style/ButtonFullWidth"
        android:layout_marginStart="@dimen/dim_24dp"
        android:layout_marginEnd="@dimen/dim_24dp"
        android:background="@drawable/selector_rounded_button_light_green"
        android:text="@string/log_out" />

</LinearLayout>